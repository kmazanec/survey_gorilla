<h1>Welcome <%= @user.username %></h1>

<div class="surveys_container">
  <% if @surveys && @surveys.any? %>
  <h2>Surveys You've Created</h2>
  <table>
      <thead>
        <th>Survey Name</th>
        <th># of Questions</th>
        <th># Times Taken</th>
      </thead>
    <% @surveys.each do |survey| %>
      <tr>
        <td><a href="/survey/<%= survey.id %>/results"><%= survey.name %></a></td>
        <td><%= survey.questions.count %></td>
        <td><%= survey.taken_surveys.count %></td>
      </tr>
    <% end %>
  </table>
  <% else %>
  <h3>You haven't created any surveys yet!</h3>
  <div>
    <a href="/create_survey">
      <div>Create A New Survey
      </div>
    </a>
  </div>
  <% end %>
</div>


<div class="surveys_container">
  <% if @taken_surveys && @taken_surveys.any? %>
  <h2>Surveys You've Taken</h2>
  <table>
      <thead>
        <th>Survey Name</th>
        <th># of Questions</th>
        <th># Times Taken</th>
      </thead>
    <% @taken_surveys.each do |taken_survey| %>
      <tr>
        <td><a href="/survey/<%= taken_survey.survey.id %>/results"><%= taken_survey.survey.name %></a></td>
        <td><%= taken_survey.survey.questions.count %></td>
        <td><%= taken_survey.survey.taken_surveys.count %></td>
      </tr>
    <% end %>
  </table>
  <% else %>
  <h3>You haven't taken any surveys yet!</h3>
  <div>
    <a href="/">
      <div>View all surveys
      </div>
    </a>
  </div>
  <% end %>  

</div>
