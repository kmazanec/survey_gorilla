<div class="signin_container"> 
  <h1>Sign In</h1>

  <% if @error %>
    <div class="errors"><%= @error %></div>
  <% end %>

  <form id="login" action="/login" method="POST">
    <label class="label" for="email">Email</label>
    <input type="email" name="email" placeholder="email" value=""><br>
    <label class="label" for="password">Password</label>
    <input type="password" name="password" placeholder="password">
    <br>
    <div class="submit"><input type="submit" value="Sign In"></div>
  </form>


  <h1>Sign Up</h1>

  <form id="signup" action="/signup" method="POST">
    <label for="username">Username</label>
      <input id="username" type="text" name="user[username]" placeholder="username"><br>
    <label for="email">Email</label>
      <input id="email" type="text" name="user[email]" placeholder="email"><br>
    <label for="password">Password</label>
      <input id="password" type="password" name="password" placeholder="password"><br>
    <label for="password_confirmation">Confirm Password</label>
      <input id="password_confirmation" type="password" name="password_confirmation" placeholder="password again"><br>
    <input type="submit" value="Create Account">
  </form>
</div>
